generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model AppState {
  id        String   @id @default(cuid())
  key       String   @unique
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Analytics {
  id        Int      @id @default(1)
  data      Json
  updatedAt DateTime @updatedAt
}

enum SaleStatus {
  PENDING_PAYMENT
  PAID
  CANCELED
  EXPIRED
}

enum TicketStatus {
  AVAILABLE
  RESERVED
  SOLD
}

enum PaymentProvider {
  PAYPHONE
}

model Ticket {
  id            String       @id @default(cuid())
  number        Int          @unique
  status        TicketStatus @default(AVAILABLE)
  reservedUntil DateTime?
  saleId        String?
  sale          Sale?        @relation(fields: [saleId], references: [id])
}

model Sale {
  id          String     @id @default(cuid())
  status      SaleStatus @default(PENDING_PAYMENT)
  amountCents Int
  currency    String     @default("USD")

  // PayPhone specific fields
  provider            PaymentProvider @default(PAYPHONE)
  payphonePaymentId   String? // Returned by PayPhone
  clientTransactionId String          @unique @default(cuid()) // Our unique reference for PayPhone

  confirmedAt DateTime?

  // Customer relation
  customerId String
  customer   Customer @relation(fields: [customerId], references: [id])

  tickets Ticket[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Customer {
  id        String @id @default(cuid())
  idNumber  String @unique // CÃ©dula
  firstName String
  lastName  String
  email     String
  phone     String

  sales Sale[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
