generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model AppState {
  id        String   @id @default(cuid())
  key       String   @unique
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Analytics {
  id        Int      @id @default(1)
  data      Json
  updatedAt DateTime @updatedAt
}

model Ticket {
  id            String       @id @default(cuid())
  number        Int          @unique
  status        TicketStatus @default(AVAILABLE)
  reservedUntil DateTime?
  saleId        String?
  sessionId     String?
  sale          Sale?        @relation(fields: [saleId], references: [id])

  @@index([status, reservedUntil])
  @@index([sessionId])
}

model Sale {
  id                        String          @id @default(cuid())
  status                    SaleStatus      @default(PENDING)
  amountCents               Int
  currency                  String          @default("USD")
  payphonePaymentId         String?
  createdAt                 DateTime        @default(now())
  updatedAt                 DateTime        @updatedAt
  clientTransactionId       String          @unique @default(cuid())
  confirmedAt               DateTime?
  customerId                String
  provider                  PaymentProvider @default(PAYPHONE)
  payphoneAuthorizationCode String?
  payphoneStatusCode        Int?
  payWithCardUrl            String?
  preparedAt                DateTime?
  customer                  Customer        @relation(fields: [customerId], references: [id])
  tickets                   Ticket[]
  requestedNumbers          String[]        @default([])
  ticketNumbers             String[]        @default([])
  lastEmailSentAt           DateTime?
}

model Customer {
  id        String   @id @default(cuid())
  idNumber  String   @unique
  firstName String
  lastName  String
  email     String
  phone     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sales     Sale[]
}

enum SaleStatus {
  PENDING
  PAID
  CANCELED
  EXPIRED
}

enum TicketStatus {
  AVAILABLE
  RESERVED
  SOLD
}

enum PaymentProvider {
  PAYPHONE
}
