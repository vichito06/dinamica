generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model AppState {
  id        String   @id @default(cuid())
  key       String   @unique
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Analytics {
  id        Int      @id @default(1)
  data      Json
  updatedAt DateTime @updatedAt
}

model AnalyticsEvent {
  id        String   @id @default(cuid())
  type      String   // pageview, unique, etc
  path      String?
  sessionId String?
  createdAt DateTime @default(now())
  raffleId  String?
  raffle    Raffle?  @relation(fields: [raffleId], references: [id])

  @@index([type, createdAt, raffleId])
}

model Raffle {
  id        String       @id @default(cuid())
  name      String
  status    RaffleStatus @default(ACTIVE)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  sales     Sale[]
  tickets   Ticket[]
  events    AnalyticsEvent[]
}

model Ticket {
  id            String       @id @default(cuid())
  number        Int
  status        TicketStatus @default(AVAILABLE)
  reservedUntil DateTime?
  saleId        String?
  sessionId     String?
  sale          Sale?        @relation(fields: [saleId], references: [id])
  raffleId      String
  raffle        Raffle       @relation(fields: [raffleId], references: [id])
  soldAt        DateTime?

  @@unique([raffleId, number])
  @@index([status, reservedUntil, raffleId])
  @@index([sessionId])
}

model Sale {
  id                        String          @id @default(cuid())
  status                    SaleStatus      @default(PENDING)
  amountCents               Int
  currency                  String          @default("USD")
  payphonePaymentId         String?
  createdAt                 DateTime        @default(now())
  updatedAt                 DateTime        @updatedAt
  clientTransactionId       String          @unique @default(cuid())
  confirmedAt               DateTime?
  customerId                String
  provider                  PaymentProvider @default(PAYPHONE)
  payphoneAuthorizationCode String?
  payphoneStatusCode        Int?
  payWithCardUrl            String?
  preparedAt                DateTime?
  customer                  Customer        @relation(fields: [customerId], references: [id])
  tickets                   Ticket[]
  requestedNumbers          String[]        @default([])
  ticketNumbers             String[]        @default([])
  lastEmailSentAt           DateTime?
  raffleId                  String?
  raffle                    Raffle?         @relation(fields: [raffleId], references: [id])

  @@index([status, confirmedAt, raffleId])
}

model Customer {
  id        String   @id @default(cuid())
  idNumber  String   @unique
  firstName String
  lastName  String
  email     String
  phone     String
  province  String?
  city      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sales     Sale[]
}

enum RaffleStatus {
  ACTIVE
  CLOSED
}

enum SaleStatus {
  PENDING
  PAID
  CANCELED
  EXPIRED
}

enum TicketStatus {
  AVAILABLE
  RESERVED
  SOLD
}

enum PaymentProvider {
  PAYPHONE
}
